<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="action_done" string="Mark as Done" class="btn-primary" type="object" />
                </header>
                <field name="sequence"/>
                <field name="patient_id"/>
                <!--<field name="appointment_count"/>-->
                <field name="gender"/>
                <field name="referred"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_draft" name="action_draft" string="Set to Draft" class="btn-primary" type="object" states="cancel"/>
                    <button id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary" type="object"
                            confirm="Are you sure that you want to confirm?" states="draft" />
                    <button id="button_done" name="action_done" string="Mark as Done" class="btn-primary" type="object"  states="confirm"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" type="object"
                            confirm="Are you sure that you want to cancel?" states="draft,confirm,done"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,confirm" options="{'clickable': '1'}"/> <!---->
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="sequence" readonly=""/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="date"/>
                            <field name="age"/>
                            <field name="gender" readonly="1" force_save="1"/>
                            <field name="time"/>
                        </group>
                        <group>
                            <!--<field name="referred"/>-->
                            <field name="appointment_count"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="patient_appointment_action" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="domain">[('age', '&gt;=', 1)]</field>
        <field name="context">{}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient appointment details!
            </p>
        </field>
    </record>
    <menuitem id="menu_appointment_root"
              name="Appointment"
              parent="menu_hospital_root"
              sequence="10"/>

    <menuitem id="menu_appointment"
              name="Appointments"
              parent="menu_appointment_root"
              action="patient_appointment_action"
              sequence="-100"/>


</odoo>