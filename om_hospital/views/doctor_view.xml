<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="specialist"/>
                <field name="patient_id"/>
                <field name="time"/>
                <field name="state"/>
                <field name="note"/>
            </tree>
        </field>
    </record>
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <!--<header>
                    <button id="button_draft" name="action_draft" string="Set to Draft" class="btn-primary" type="object" states="cancel"/>
                    <button id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary" type="object"
                            confirm="Are you sure that you want to confirm?" states="draft" />
                    <button id="button_done" name="action_done" string="Mark as Done" class="btn-primary" type="object"  states="confirm"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" type="object"
                            confirm="Are you sure that you want to cancel?" states="draft,confirm,done"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,done,confirm" options="{'clickable': '1'}"/>
                </header>-->
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                        <h1>
                            <field name="referance" readonly=""/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="patient_id"/>
                            <field name="time"/>
                        </group>
                        <group>

                            <field name="specialist"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id="Doctor_action" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
<!--
        <field name="domain">[('age', '&gt;=', 1)]</field>
-->
<!--
        <field name="context">{'search_default_gender':1,'search_default_patient_name':1,'search_default_resposible':1}</field>
-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient details!
            </p>
        </field>
    </record>

    <menuitem id="menu_doctor_root"
              name="Doctor"
              parent="menu_hospital_root"
              sequence="-10"/>

    <menuitem id="menu_doctor"
              name="Doctors"
              parent="menu_doctor_root"
              action="Doctor_action"
              sequence="-100"/>
</odoo>